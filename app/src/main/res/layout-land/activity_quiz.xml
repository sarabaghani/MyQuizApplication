<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:layout_marginTop="50dp"
    android:background="#C4B7DC"
    tools:context=".controller.QuizActivity">

    <!--    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4B7DC"
        android:gravity="center"
        android:orientation="vertical">-->

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:visibility="gone">

        <TextView
            android:id="@+id/question_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:padding="8dp"
            android:textColor="#190202"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="this is test !!" />

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/false_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/false_ic"
                android:tint="#AC1010" />

            <ImageButton
                android:id="@+id/true_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/true_ic"
                android:tint="#4CAF50" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/first_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="20dp"
            android:src="@drawable/first_ic"
            android:tint="#1D0547" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="50dp"
            android:layout_marginTop="50dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:text="@string/button_next"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="50dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_left_arrow"
            android:text="@string/button_prev"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/last_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="20dp"
            android:src="@drawable/last_ic"
            android:tint="#1D0547" />

    </FrameLayout>


    <!--    </FrameLayout>-->

    <FrameLayout
        android:id="@+id/game_over_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#EDD078">

        <TextView
            android:id="@+id/game_over_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            android:text="@string/game_over"
            android:textColor="#045951"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/score_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:textColor="#142793"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/user_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:textColor="#370740"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_reset"
            android:tint="#0B0000" />
    </FrameLayout>


</FrameLayout>